        <%= f.email_field :applicant_id, :autofocus => true, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :subject, class: "col-lg-3 control-label" %>
      <div class="col-lg-9">
        <%= f.email_field :subject, :autofocus => true, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :q_content, class: "col-lg-3 control-label" %>
      <div class="col-lg-9">
        <%= f.email_field :q_content, :autofocus => true, class: "form-control" %>
      </div>
    </div>

  <% if @question.errors.any? %>
